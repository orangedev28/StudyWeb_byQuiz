@model StudyWeb.Models.Subjects

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div>
    <p style="color: black; font-size: 20px">@Model.Classs.className / @Model.subjectName / Sửa môn học</p>
    <a href="@Url.Action("Details", "Subjects", new { id = Model.id})" class="add_posts">
        <h5><img height="24" width="24" src="~/Content/images/back.png" /> Quay lại</h5>
    </a>
</div>
<br />
<br />

@using (Html.BeginForm("Edit", "Subjects", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="card" style="background: rgba(0,0,0,0.5); min-height: 200px;">
            <div class="card-header" style="background: rgba(0,0,0,0.5); ">
                <div class="row">
                    <h1 style="color: white; margin-left: 30px">Thay đổi thông tin môn học</h1>
                </div>
            </div>
            <br />
            <div class="card-body" style="text-align: center">
                <img height="120" width="120" src="~/ImagesSubject/@Model.imageSubjects" alt="Subjects" />
                <br />
                <br />
                <br />
                <div class="row" style="margin-left: 10px">
                    <div class="col-md-5" style=" margin-top: 15px; text-align: left">
                        <div class="row">
                            <div class="col-md-6" style="text-align: right">
                                <h3 style="color:white">Chọn năm :</h3>
                            </div>
                            <div class="col-md-6">
                                @Html.DropDownList("idClass", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.idClass, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6" style=" margin-top: 15px; text-align:left">
                        <div class="row">
                            <div class="col-md-6" style="text-align: right">
                                <h3 style="color:white">Ảnh môn : </h3>
                            </div>
                            <div class="col-md-6">
                                <div class="col-md-3" style="display:none">
                                    @Html.EditorFor(model => model.imageSubjects, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.imageSubjects, "", new { @class = "text-danger" })
                                </div>
                                <div>
                                    <input style="color: white; margin-right: 20px; height: 38px;" type='file' name="fileUpload" value="@Model.imageSubjects" />
                                </div>    
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-left: 10px">
                    <div class="col-md-5" style=" margin-top: 15px; text-align: left">
                        <div class="row">
                            <div class="col-md-6" style="text-align: right">
                                <h3 style="color:white; margin-right:15px;">Tên môn : </h3>
                            </div>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.subjectName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.subjectName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6" style=" margin-top: 15px; text-align: left">
                        <div class="row">
                            <div class="col-md-6" style="text-align: right">
                                <h3 style="color: white; margin-right: 15px">Hiển thị : </h3>
                            </div>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.display)
                                @Html.ValidationMessageFor(model => model.display, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer" style="text-align: right; height: 60px">
                <button type="submit" class="add_posts" style="padding: 5px; padding-right: 10px; padding-left: 10px; margin-right: 30px; background-color: white; color: black">Lưu</button>
            </div>
        </div>
    </div>




}






<style>

    .tri-state {
        height: 38px;
        width: 200px;
    }

    .project {
        padding-top: 30px;
        min-height: 100vh;
    }

    .btn_a {
        color: white;
        padding: 5px;
        padding-left: 10px;
        padding-right: 10px;
        background-color: rgba(0,0,0,0.5);
        border-radius: 8px;
        margin-right: 20px
    }

        .btn_a:hover {
            background: white;
            color: dodgerblue;
        }

    .css_card-body {
        color: white;
    }

    .card-footer {
        height: 50px;
    }

        .card-footer input {
            color: white;
            margin-top: 10px;
            margin-bottom: 10px;
            margin-right: 30px;
            margin-right: 30px;
        }

        .card-footer img:hover {
            height: 32px;
            width: 32px;
        }

    add_posts:hover {
        background-color: forestgreen;
        color: white;
    }

    img {
        max-height: 440px;
        max-width: 540px;
    }

    .copyright {
        margin-top: 0;
    }
</style>

































