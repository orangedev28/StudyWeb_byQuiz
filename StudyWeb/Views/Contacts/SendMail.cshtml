@model StudyWeb.Models.Contacts

@{
    ViewBag.Title = "SendMail";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br /><br /><br /><br />
@using (Html.BeginForm("WriteMail", "Contacts"))
{
    @Html.AntiForgeryToken()
    <div id="project" class="project">
        <div class="container">
            <div class="card" style="background: rgba(0,0,0,0.5); min-height: 200px;">
                <div class="card-header" style="background: rgba(0,0,0,0.5); ">
                    <div class="row">
                        <h3 style="color: white; margin-left: 30px">Gửi đến @Model.fullname</h3>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row" style="width: 100%; margin: 30px;margin-top: 10px;margin-bottom: 10px; color: white">
                        <h5>Địa chỉ email :</h5> 
                    </div>
                    <div class="row">
                        <input style="width: 100%; margin: 30px;margin-top: 10px;margin-bottom: 10px; padding: 5px" type="text" name="to" value="@Model.maill" />
                    </div><br />
                    <div class="row" style="width: 100%; margin: 30px;margin-top: 10px;margin-bottom: 10px; color: white">
                        <h5>Nội dung :</h5>
                    </div>
                    <div class="row">
                        <textarea id="contentPosts" name="content" placeholder="Nhập nội dung thư ..." rows="3" style="width: 100%; margin: 30px;margin-top: 10px;margin-bottom: 10px; padding: 5px"></textarea>
                    </div>
                </div>
                <div class="card-footer" style="text-align: right; height: 60px">
                    <button type="submit" class="add_posts" style="padding: 5px; padding-right: 10px; padding-left: 10px; margin-right: 30px; background-color: white; color: black">Gửi</button>
                </div>
                <div>
                    @ViewBag.success;
                </div>
            </div>
        </div>
    </div>
}



<style>

    .project {
        min-height: 80vh;
    }

    .btn_a {
        color: white;
        padding: 5px;
        padding-left: 10px;
        padding-right: 10px;
        background-color: rgba(0,0,0,0.5);
        border-radius: 8px;
        margin-right: 20px
    }

        .btn_a:hover {
            background: white;
            color: dodgerblue;
        }

    .css_card-body {
        color: white;
    }

    .card-footer {
        height: 50px;
    }

        .card-footer input {
            color: white;
            margin-top: 10px;
            margin-bottom: 10px;
            margin-right: 30px;
            margin-right: 30px;
        }

        .card-footer img:hover {
            height: 32px;
            width: 32px;
        }

    add_posts:hover {
        background-color: forestgreen;
        color: white;
    }

    img {
        max-height: 440px;
        max-width: 540px;
    }

    .copyright {
        margin-top: 0;
    }
</style>











