@model StudyWeb.Models.Contacts

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header" style="background-color: aqua;">
        <div class="row">
            <strong class="text-uppercase">Chi tiết thông tin liên hệ</strong>
        </div>
    </div>
</div> <br />
       <p>
           @Html.ActionLink("Trở về danh sách", "Index")
       </p>
<br /><br />
<div id="contact" class="contact">
    <div class="con_bg">
        <div class="container">
            <div class="row">
                <div class="col-md-10 offset-md-1">
                    <div class="main_form">
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                Họ và tên : @Model.fullname
                            </div>
                            <div class="col-md-6 col-sm-6">
                                Địa chỉ email : @Model.maill
                            </div>
                            <br /><br />
                            <div class="col-md-6 col-sm-6">
                                Số điện thoại : @Model.phone
                            </div>
                            <div class="col-md-6 col-sm-6">
                                Địa chỉ : @Model.address
                            </div>
                            <br /><br />
                            <div class="col-md-12">
                                Nội dung :
                            </div>
                            <br /><br />
                            <div class="col-md-12" style="min-height: 100px; border: solid 1px">
                                <p style="margin: 20px">@Model.message</p>
                            </div>
                        </div>
                    </div>
                    <br /><br /><br />
                    <div style="text-align: right">
                        <a style="padding: 5px; padding-left: 15px; padding-right: 15px; background-color: peru; color: white" href="@Url.Action("SendMail","Contacts", new { id = @Model.id })">Trả lời thư</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br /><br /><br /><br />


