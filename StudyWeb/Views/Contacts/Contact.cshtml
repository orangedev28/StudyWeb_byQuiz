@model StudyWeb.Models.Contacts

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div id="contact" class="contact">
        <div class="con_bg">
            <div class="container">
                <div class="row">
                    <div class="col-md-10 offset-md-1">
                        
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="main_form">
                                <div class="row">
                                    <div class="col-md-6 col-sm-6" style="color: red">
                                        @ViewData["ErrorFullname"]
                                    </div>
                                    <div class="col-md-6 col-sm-6" style="color: red">
                                        @ViewData["ErrorMail"]
                                    </div>
                                    <div class="col-md-6 col-sm-6">
                                        <input class="contactus" placeholder="Họ và tên" type="text" name="fullname">
                                    </div>
                                    <div class="col-md-6 col-sm-6">
                                        <input class="contactus" placeholder="Địa chỉ mail" type="text" name="maill">
                                    </div>
                                    <div class="col-md-6 col-sm-6" style="color: red">
                                        @ViewData["ErrorPhone"]
                                    </div>
                                    <div class="col-md-6 col-sm-6" style="color: red">
                                        @ViewData["ErrorAddress"]
                                    </div>
                                    <div class="col-md-6 col-sm-6">
                                        <input class="contactus" placeholder="Số điện thoại" type="text" name="phone">
                                    </div>

                                    <div class="col-md-6 col-sm-6">
                                        <input class="contactus" placeholder="Địa chỉ" type="text" name="address">
                                    </div>
                                    <div class="col-md-12" style="color: red">
                                        @ViewData["ErrorMessage"]
                                    </div>
                                    <div class="col-md-12">
                                        <input class="contactusmess" placeholder="Nội dung" type="text" name="message" Message="message">
                                    </div>

                                    <div class="col-md-12">
                                        <button class="send_btn" type="submit">Gửi</button>
                                    </div>
                                </div>
                            </div>
                            }
                    </div>
                </div>
            </div>
        </div>
    </div>
<br />
<br />
<!-- end contact section -->
