@model IEnumerable<StudyWeb.Models.Question>

@{
    ViewBag.Title = "ListQuestionAdmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="card">
    <div class="card-header" style="background-color: aqua;">
        <div class="row" style="justify-content: center">
            <strong class="text-uppercase" style="font-size: 25px;">Danh sách câu hỏi bài kiểm tra</strong>
        </div>
    </div>
</div>
<br />
<div style="text-align: right">
    <div style="margin: 10px">
        <a class="btn-success css-a" style="padding: 5px; padding-left: 10px; padding-right:10px;" href="@Url.Action("AddQuestion", "Questions")">Thêm câu hỏi</a>
    </div>
</div>

<br />
@{
    int i = 0;
}

@foreach (var item in Model)
{
    i++;
    <div class="card">
        <div class="card-header">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-10">
                        <strong style="font-size: 20px;" class="text-uppercase">Câu @i : @item.question1</strong>
                    </div>
                    <div class="col-md-2" style="text-align:center">
                        <strong style="font-size: 20px;" class="text-uppercase">(@item.score điểm)</strong>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (item.imageQuestion1 != null)
            {
                <div style="text-align: center">
                    <img height="300" width="600" src="~/ImagesQuestion/@item.imageQuestion1" />
                </div>
            }
            <fieldset>
                <div style="font-size: 18px; margin-left:30px" class="col-md-3">
                    <input type="radio" id="@item.id" name="@item.id" value="@item.answer1">
                    <label>A. @item.answer1</label>
                </div>

                <div style="font-size: 18px; margin-left: 30px" class="col-md-3">
                    <input type="radio" id="@item.id" name="@item.id" value="@item.answer2">
                    <label>B. @item.answer2</label>
                </div>

                <div style="font-size: 18px; margin-left: 30px" class="col-md-3">
                    <input type="radio" id="@item.id" name="@item.id" value="@item.answer3">
                    <label>C. @item.answer3</label>
                </div>
                <div style="font-size: 18px; margin-left: 30px" class="col-md-3">
                    <input type="radio" id="@item.id" name="@item.id" value="@item.answer4">
                    <label>D. @item.answer4</label>
                </div>
            </fieldset>
        </div>
        <div class="card-footer">
            <div class="row" style="margin-top: 10px">
                <div class="col-md-9">
                    <h5>Đáp án đúng : @item.correctAnswer</h5>
                </div>
                <div class="col-md-3">
                    <a class="btn-default" style="background-color: dodgerblue;color:white ;padding: 5px; padding-left: 10px; padding-right:10px;" href="@Url.Action("Edit", "Questions", new { id = item.id})">Sửa</a>
                    <a class="btn-danger" style="padding: 5px; padding-left: 10px; padding-right:10px; margin-left: 10px" href="@Url.Action("Delete", "Questions", new { id = item.id})">Xóa</a>
                </div>
            </div>
        </div>
    </div>
    <br />

}













