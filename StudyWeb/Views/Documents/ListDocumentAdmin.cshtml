@model IEnumerable<StudyWeb.Models.Document>

@{
    ViewBag.Title = "ListDocumentAdmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@foreach (var item in Model)
{
    <div>
        <p style="color: black; font-size: 20px">@item.Subjects.subjectName / Tài liệu</p>
        <a href="@Url.Action("Details","Subjects", new { id = item.idSubjects })" class="add_posts">
            <h5><img height="24" width="24" src="~/Content/images/back.png" /> Quay lại</h5>
        </a>
    </div>
    break;
}

<div id="project" class="project" style="padding-top: 20px">
    <div class="container">
        <div class="card">
            <div class="card-header" style="background-color: aqua;">
                <div class="row">
                    <strong class="text-uppercase">Danh sách tài liệu môn học</strong>
                </div>
            </div>
        </div>
        <br />
        <div style="text-align: right">
            <a style="padding: 10px; background-color: forestgreen; color: white" href="@Url.Action("Create","Documents")">
                Thêm tài liệu
            </a>
        </div>
        <br />
        @foreach (var item in Model)
        {
            <div class="card">
                <div class="card-header" style="background-color: whitesmoke;">
                    <div class="row">
                        <a style="margin-left: 20px" href="@Url.Action("Details","Documents",new { id = item.id })"><strong class="text-uppercase">@item.contentDocument</strong></a>
                    </div>
                </div>
            </div>
            <br />
        }
    </div>
</div>