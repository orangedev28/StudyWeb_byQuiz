@model IEnumerable<StudyWeb.Models.Classs>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="project" class="project">
    <div class="container">
        <div class="card">
            <div class="card-header" style="background-color: sandybrown;">
                <div class="row">
                    <strong class="text-uppercase">
                        <h1 style="color: white; font-size: 40px">Các năm học</h1>
                    </strong>
                </div>
            </div>
        </div>

        <div class="card" style="text-align: right">
            <div style="margin: 10px">
                <a class="btn-success css-a" style="padding: 5px; padding-left: 10px; padding-right:10px; border-radius: 8px" href="@Url.Action("Create", "Classses")">Thêm mới</a>
            </div>

        </div><br />
        <br />
        <div class="card">
            <div class="card-body">
                <div class="row" style="text-align: center;">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-3" style="margin-bottom: 50px">
                            <a style="text-align:center" href="@Url.Action("Details", "Classses", new { id = item.id})">
                                <img class="css_img" height="100" width="100" style="border: solid 1px; border-radius: 100px; padding: 10px;" src="~/ImagesClass/@item.imageClass" alt="#" />
                            </a>
                        </div>
                        <br />
                    }
                </div>

            </div>
        </div>


    </div>
</div>

<style>
    .css-a:hover{
        background-color: white;
        border: solid 1px;
        border-color: forestgreen;
        color: red;
    }
    .row {
        justify-content: center;
    }
    .css_img:hover{
        transform: rotate(16deg);
    }
</style>

