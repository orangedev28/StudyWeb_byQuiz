@model StudyWeb.Models.Test

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}




<div>
    <p style="color: black; font-size: 20px">@Model.Subjects.subjectName / @Model.nameTest / Xóa</p>
    <a href="@Url.Action("Details", "Subjects", new { id = @Model.id })" class="add_posts">
        <h5><img height="24" width="24" src="~/Content/images/back.png" /> Quay lại</h5>
    </a>
</div>
<br />
<br />

<div id="project" class="project">
    <div class="container">
        <div class="card" style="background: rgba(0,0,0,0.5); min-height: 200px;">
            <div class="card-header" style="background: rgba(0,0,0,0.5); ">
                <div class="row">
                    <h1 style="color: white; margin-left: 30px">Xóa dữ liệu môn học</h1>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2" style="text-align: right">
                        <h4 style="color:white">Bài kiểm tra :</h4>
                    </div>
                    <div class="col-md-9" style="color:white">
                        <h4>@Model.nameTest</h4>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2" style="text-align: right">
                        <h4 style="color:white">Thời gian :</h4>
                    </div>
                    <div class="col-md-9" style="color:white">
                        <h4>@Model.timeTest</h4>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2" style="text-align: right">
                        <h4 style="color:white">Hiển thị :</h4>
                    </div>
                    <div class="col-md-9" style="color:white">
                        <h4>@Model.display</h4>
                    </div>
                </div>
            </div>
            <div class="card-footer" style="text-align: right; height: 60px">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="add_posts" style="padding: 5px; padding-right: 10px; padding-left: 10px; margin-right: 30px; background-color: white; color: black">Xóa</button>
                }
            </div>
        </div>
    </div>
</div>



<style>

    .list-box {
        height: 35px;
        width: 100%;
    }

    .btn_a {
        color: white;
        padding: 5px;
        padding-left: 10px;
        padding-right: 10px;
        background-color: rgba(0,0,0,0.5);
        border-radius: 8px;
        margin-right: 20px
    }

        .btn_a:hover {
            background: white;
            color: dodgerblue;
        }

    .css_card-body {
        color: white;
    }

    .card-footer {
        height: 50px;
    }

        .card-footer input {
            color: white;
        }

        .card-footer img:hover {
            height: 32px;
            width: 32px;
        }

    add_posts:hover {
        background-color: forestgreen;
        color: white;
    }

    img {
        max-height: 440px;
        max-width: 540px;
    }

    .copyright {
        margin-top: 0;
    }
</style>

